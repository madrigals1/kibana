# Elasticsearch Configuration
ELASTICSEARCH_VERSION=8.11.0
ES_JAVA_OPTS=-Xms1g -Xmx1g

# Kibana Configuration
KIBANA_VERSION=8.11.0
KIBANA_SYSTEM_PASSWORD=change_me_password

# Logstash Configuration
LOGSTASH_VERSION=8.11.0
LS_JAVA_OPTS=-Xms512m -Xmx512m
XPACK_MONITORING_ENABLED=false

# Ports - External ports for accessing services
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_TRANSPORT_PORT=9300
KIBANA_PORT=5601
LOGSTASH_BEATS_PORT=5044
LOGSTASH_HTTP_PORT=9600

# Security (set to true for production)
XPACK_SECURITY_ENABLED=false

# Container Names
ELASTICSEARCH_CONTAINER_NAME=elasticsearch
KIBANA_CONTAINER_NAME=kibana
LOGSTASH_CONTAINER_NAME=logstash

# Networks
ELK_NETWORK=elk_network
HTTPS_NETWORK=https_network
